<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayoutConta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auths.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A0A0A"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="11dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:text="LOGIN"
            android:textSize="20dp"
            android:textColor="@color/laranja" />
        <TextView
            android:id="@+id/textView11522"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_marginTop="15dp"
            android:textColor="#d2d2d2"
            android:text="E-mail" />
        <EditText
            android:id="@+id/edt_emailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Insira seu e-mail"
            android:layout_marginTop="3dp"
            android:background="@drawable/edt_box"
            android:textSize="16dp"
            android:inputType="textEmailAddress"
            android:textColor="#0F0F0F"
            android:textColorHint="#424242" />
        <TextView
            android:id="@+id/textView11252"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_marginTop="7dp"
            android:textColor="#d2d2d2"
            android:text="Senha" />
        <EditText
            android:id="@+id/edt_senhaLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Insira sua senha"
            android:layout_marginTop="3dp"
            android:background="@drawable/edt_box"
            android:inputType="textPassword"
            android:textColor="#0F0F0F"
            android:textSize="16dp"
            android:textColorHint="#424242" />

        <Button
            android:id="@+id/btn_entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/laranja"
            android:fontFamily="@font/nunito_extrabold"
            android:text="ENTRAR"
            android:textColor="#F2F2F2"
            app:cornerRadius="10dp" />

        <TextView
            android:id="@+id/tvCadastro"
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="NÃ£o possue uma conta? Cadastro"
            android:textColor="#F2F2F2" />

    </LinearLayout>
</FrameLayout>