<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    >

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D9D9D9"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_carrinho"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:scaleType="centerCrop"
                android:src="@drawable/monitor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nome_carrinho"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#252525"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="Monitor Gamer KBM! GAMING MG700 27' Curvo, Led Full Hd..." />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:fontFamily="@font/nunito_semibold"
                android:text="PreÃ§o:"
                android:textColor="#525252"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="0.1"
                android:text="Quant."
                android:fontFamily="@font/nunito_semibold"
                android:textColor="#525252"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/preco_carrinho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:layout_weight="1"
                android:text="R$ 999,99"
                android:textColor="@color/laranja" />

            <ImageView
                android:id="@+id/diminuir"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/laranja"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/tv_quant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".03"
                android:textColor="#525252"
                android:text="1" />

            <ImageView
                android:id="@+id/aumentar"
                android:layout_width="24dp"
                android:layout_height="24dp"

                app:tint="@color/laranja"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>