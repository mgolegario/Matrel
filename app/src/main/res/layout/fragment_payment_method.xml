<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pagamento.PaymentMethodFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0a0a0a"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formas de Pagamento"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="#d2d2d2"/>

        <FrameLayout
            android:id="@+id/flDebito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/box_account"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/baseline_credit_card_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/laranja"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="Débito"
                    android:textColor="#d2d2d2" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flCredito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/box_account"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">]

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:drawableStart="@drawable/baseline_credit_card_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="#2196F3"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="Crédito"
                    android:textColor="#d2d2d2" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flPix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:background="@drawable/box_account"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="83dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/pix" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>