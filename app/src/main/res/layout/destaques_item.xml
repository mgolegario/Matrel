<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="10dp"
    >

    <LinearLayout
        android:layout_width="242dp"
        android:layout_height="178dp"
        android:orientation="vertical"
        android:background="#D9D9D9"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="17dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/rating" />

            <TextView
                android:id="@+id/avaliacoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#525252"
                android:fontFamily="@font/nunito_extrabold"
                android:text="(100)"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/outline_favorite_border_24"
                app:tint="#525252"  />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/baseline_add_shopping_cart_24"
                app:tint="#525252" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/destaques_img"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:scaleType="centerCrop"
                android:src="@drawable/monitor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/destaques_text"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:textColor="#252525"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="Monitor Gamer KBM! GAMING MG700 27' Curvo, Led Full Hd..." />

                <TextView
                    android:id="@+id/preco_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_black"
                    android:text="R$ 999,99"
                    android:textColor="@color/laranja" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnComprarCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:backgroundTint="@color/laranja"
android:textColor="#F2F2F2"
            android:fontFamily="@font/nunito_extrabold"
            android:text="COMPRAR"
            app:cornerRadius="10dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>