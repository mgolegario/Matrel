<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auths.ContaFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#0A0A0A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="25dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="250dp"
                >

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/kabum_imagem" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/nomeCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textSize="16sp"
                    android:textColor="#F2F2F2"
                    android:text="Usuário do Usuário" />

                <TextView
                    android:id="@+id/emailDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:textSize="14sp"
                    android:textColor="#F2F2F2"
                    android:text="usuario@gmail.com" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/box_account"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/tvMeusDados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/outline_person_outline_24"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:drawableTint="#F2F2F2"
                android:drawablePadding="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:padding="15dp"
                android:text="Meus dados"
                android:textColor="#F2F2F2"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#252525"
             />

            <TextView
                android:id="@+id/tvMeusPedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_add_shopping_cart_24"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:drawableTint="#F2F2F2"
                android:fontFamily="@font/nunito_semibold"
                android:padding="15dp"
                android:drawablePadding="15dp"
                android:text="Meus pedidos"
                android:textColor="#F2F2F2"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#252525"
                />

            <TextView
                android:id="@+id/tvFavoritos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/outline_favorite_border_24"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:fontFamily="@font/nunito_semibold"
                android:drawableTint="#F2F2F2"
                android:padding="15dp"
                android:drawablePadding="15dp"
                android:text="Favoritos"
                android:textColor="#F2F2F2"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#252525"
                />


            <TextView
                android:id="@+id/tvEnderecos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/outline_location_on_24"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:fontFamily="@font/nunito_semibold"
                android:drawableTint="#F2F2F2"
                android:padding="15dp"
                android:drawablePadding="15dp"
                android:text="Endereços"
                android:textColor="#F2F2F2"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#252525"
                />

            <TextView
                android:id="@+id/tvCartoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_credit_card_24"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:fontFamily="@font/nunito_semibold"
                android:drawableTint="#F2F2F2"
                android:padding="15dp"
                android:drawablePadding="15dp"
                android:text="Cartões"
                android:textColor="#F2F2F2"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#252525"
                />

            <TextView
                android:id="@+id/tvSair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_exit_to_app_24"
                android:fontFamily="@font/nunito_semibold"
                android:padding="15dp"
                android:drawablePadding="15dp"
                android:text="Sair"
                android:textColor="#F2F2F2"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>